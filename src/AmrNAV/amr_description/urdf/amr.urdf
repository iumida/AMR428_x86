<?xml version="1.0"?>
<robot name="amr">

  <link name="base_link">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://amr_description/meshes/ACE_BOT.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="base_color">
      <color rgba="0.42 0.45 0.42 1"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://amr_description/meshes/ACE_BOT.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="1"/>
    <inertia ixx="0.4" iyy="0.4" izz="0.4" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

  <link name="livox_frame">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.065 0.065 0.06"/></geometry>
      <material name="livox_color"><color rgba="0.09 0.01 0.45 1"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.065 0.065 0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.167" iyy="0.167" izz="0.167" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="base_link_to_livox_frame" type="fixed">
    <parent link="base_link"/>
    <child link="livox_frame"/>
    <origin xyz="0.82 0 1.4" rpy="0 0 0"/>
  </joint>

  <!-- ----------------------------- Front LiDAR sensor frame -->
  <link name="lidar_front">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
      <material name="lidar_front_color"><color rgba="0.8 0.0 0.0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="base_link_to_lidar_front" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_front"/>
    <origin xyz="1.17 0 0.5" rpy="0 0 3.14159"/>
  </joint>

  <!-- ----------------------------- Rear LiDAR sensor frame -->
  <link name="lidar_rear">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
      <material name="lidar_rear_color"><color rgba="0.0 0.8 0.0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="base_link_to_lidar_rear" type="fixed">
    <parent link="base_link"/>
    <child  link="lidar_rear"/>
    <origin xyz="-0.4 0 0.63" rpy="0 0 0"/>
  </joint>


  <!-- ----------------------------- Camera Fork frame -->
  <link name="camera_fork"/>
  <joint name="base_link_to_camera_fork" type="fixed">
    <parent link="base_link"/>
    <child  link="camera_fork"/>
    <!-- 
      xyz = (-0.16, 0, 0.23)  
      rpy = (roll, pitch, yaw) = (−π/2, 0, +π/2)
    -->
    <origin xyz="-0.21 0 0.23" rpy="-1.5708 0 1.5708"/>
  </joint>

  <!-- ----------------------------- Simplified two-wheel bicycle model -->
  <link name="rear_wheel"/>
  <joint name="rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_wheel"/>
    <origin xyz="-0.002 0 0.164" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="10.0"/>
  </joint>

  <link name="front_wheel"/>
  <joint name="front_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_wheel"/>
    <origin xyz="1.009 0 0.164" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.716" upper="0.716" effort="100" velocity="10.0"/>
  </joint>

  <!-- ----------------------------- ros2_control minimal interfaces -->
  <ros2_control name="amr_system" type="system">
    <hardware>
      <plugin>amr_hardware/AmrSystem</plugin>
    </hardware>

    <joint name="rear_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>

    <joint name="front_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>

